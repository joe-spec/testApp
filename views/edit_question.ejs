<div class="container adminquestion">
    <div class="row">
        <div class="col">
            <%- include('./partials/messages') -%>
            <h4 class="mt-3"><span class="fa fa-arrow-left"></span>Back to <a href="/admin">Admin Dashboard</a></h4>
            <form action="/admin/edit/<%= question._id %>" method="POST">
                <div class="form-group">
                    <label for="question"><h5 class="mt-4">Set Question</h5></label>
                    <input id="question" type="text" name="question" value="<%= question.question%>" placeholder="write question..."
                        class="form-control">
                </div>

                <div class="form-group">
                    <div class="form-group alert alert-warning">
                        <p class="text-danger">Please insert the correct answer in this box</p>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon bg-success py-2 px-1 text-light">A</span>
                            <input name="opt1" class="form-control" value="<%= question.opt1 %>" type="text">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon bg-success py-2 px-1 text-light">B</span>
                        <input name="opt2" class="form-control" value="<%= question.opt2%>" type="text">
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon bg-success py-2 px-1 text-light">C</span>
                        <input name="opt3" class="form-control" value="<%= question.opt3%>" type="text">
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon bg-success py-2 px-1 text-light">D</span>
                        <input name="opt4" class="form-control" value="<%= question.opt4%>" type="text">
                    </div>
                </div>

                <input class="btn btn-success py-1 float-right" type="submit" value="Update">

            </form>
        </div>
    </div>
</div>