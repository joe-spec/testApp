<div class="container adminquestion">
    <div class="row">
        <div class="col">
            <%- include('./partials/messages') -%>
            <a href="/admin"><h4 class="mt-3"><i class="fa fa-arrow-left"></i>Back to Admin Dashboard</h4></a>
            <form action="/admin/question" method="POST">

                <div class="input-field">
                    <input id="time" type="number" name="time" class="form-control">
                    <label for="time"><h5 class="">Set time for the test...</h5></label>
                </div>

                <div class="input-field">
                    <input id="instruction" type="text" name="instruction" class="form-control">
                    <label for="instruction"><h5 class="">write instruction...</h5></label>
                </div>

                <div class="input-field">
                    <input id="question" type="text" name="question" class="form-control">
                    <label for="question"><h5 class="">write question...</h5></label>
                </div>

                <div class="input-field">
                    <div class="input-field alert alert-warning">
                        <p class="text-danger">Please insert the correct answer in this box</p>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon bg-success py-2 px-1 text-light">A</span>
                            <input name="opt1" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <div class="input-field">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon bg-success py-2 px-1 text-light">B</span>
                        <input name="opt2" class="form-control" type="text">
                    </div>
                </div>

                <div class="input-field">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon bg-success py-2 px-1 text-light">C</span>
                        <input name="opt3" class="form-control" type="text">
                    </div>
                </div>

                <div class="input-field">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon bg-success py-2 px-1 text-light">D</span>
                        <input name="opt4" class="form-control" type="text">
                    </div>
                </div>

                <input class="btn green p-1 btn-block float-right" type="submit" value="submit">

            </form>
        </div>
    </div>
</div>